#include <iostream>
using namespace std;

int main() {
    int num1, num2, sum;

    // Input two integers
    cout << "Enter the first integer: ";
    cin >> num1;
    
    cout << "Enter the second integer: ";
    cin >> num2;

    // Calculate the sum
    sum = num1 + num2;

    // Print the result with a descriptive message
    cout << "The sum of " << num1 << " and " << num2 << " is " << sum << "." << endl;

    return 0;
}

Explanation:


