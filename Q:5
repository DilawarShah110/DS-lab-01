#include <iostream>
using namespace std;

// Class definition
class Average {
public:
    // Function to calculate and display the average
    void calculateAverage(float num1, float num2, float num3) {
        float avg = (num1 + num2 + num3) / 3;
        cout << "The average of " << num1 << ", " << num2 << ", and " << num3 << " is " << avg << endl;
    }
};

